            <string>///set up the turn organizer object

enum turn_state {
    determine_next,
    wait_for_resolution
}

/* Turn state variables explained:
    determine_next: A short, 1-frame state that advances the current turn and sets that creature to "active"
    wait_for_resolution: Waits for the creature to set its flag to "inactive"
*/

//creature_count is the total number of creatures in the game.
//the creature_id array holds the id of each creature.  It ends at creature_count - 1
//The default creature_id[0] is the hero, because he always moves first.
creature_count = 1;
creature_id[0] = obj_hero.id;

//current_turn_state indicates the current turn state
current_turn_state = turn_state.wait_for_resolution;
//The current creature's turn defaults to 0, which is the player's character
current_creature_turn = 0;

//call randomize to change the seed randomly, thus making the rest of the game random.
randomize();
//set global.debug to 0, when it is set to 1, various debug things are drawn.
global.debug = 0;



